@using MvcKutuphane.Models.Entity
@model List<TBLPERSONEL>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Personeller</h2>

<table class="table table-bordered">
    <tr>
        <th>Personel ID</th>
        <th>Personel Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var pr in Model)
    {
        <tr>
            <td>@pr.ID</td>
            <td>@pr.PERSONEL</td>
            <td><a href="/Personel/PersonelSil/@pr.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/@pr.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Personel/PersonelEKle/" class="btn btn-primary">Yeni Personel Ekle</a>
