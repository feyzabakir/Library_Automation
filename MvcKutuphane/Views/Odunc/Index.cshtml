@using MvcKutuphane.Models.Entity
@model List<TBLHAREKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{

    <div style="margin-top:15px; margin-bottom:15px;">
        <b>Aranacak kitap Adını Giriniz &nbsp</b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </div>
}

<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>

    </tr>
    @foreach (var k in Model)
    {
<tr>
    <td>@k.ID</td>
    <td>@k.TBLKITAP.AD</td>
    <td>@k.TBLUYELER.AD @k.TBLUYELER.SOYAD</td>
    <td>@k.TBLPERSONEL.PERSONEL</td>
    <td>@Convert.ToDateTime(k.ALISTARIHI).ToString("dd/MM/yyyy")</td>
    <td>@Convert.ToDateTime(k.SATISTARIHI).ToString("dd/MM/yyyy")</td>
    <td><a href="/Odunc/OduncIade/@k.ID" class="btn btn-danger" style="background-color:#41ae1a; color:white">Kitabı İade Et</a></td>

</tr>
    }
</table>


